  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "^18 || ^20 || ^22",
    "mocha": "11.1.0",
    "prettier": "3.5.3",
    "ts-mocha": "11.1.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "tsconfig.json"
  ],
  "license": "GPL-3.0",
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
